<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nombre del alumno -->
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del alumno"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <!-- Campo de entrada para el nombre -->
    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifica el nombre del alumno"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@drawable/estilos_editex_background"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"/>

    <!-- Apellido del alumno -->
    <TextView
        android:id="@+id/txtApellidoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido del alumno"
        app:layout_constraintTop_toBottomOf="@+id/editNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <!-- Campo de entrada para el apellido -->
    <EditText
        android:id="@+id/editApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifica el apellido del alumno"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@drawable/estilos_editex_background"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"/>

    <!-- Email del alumno -->
    <TextView
        android:id="@+id/txtEmailPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email del alumno"
        app:layout_constraintTop_toBottomOf="@+id/editApellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <!-- Campo de entrada para el correo electrónico -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifica el correo electrónico del alumno"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@drawable/estilos_editex_background"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"/>

    <!-- Contraseña del alumno -->
    <TextView
        android:id="@+id/txtContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña del alumno"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <!-- Campo de entrada para la contraseña -->
    <EditText
        android:id="@+id/editContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifica la contraseña del alumno"
        app:layout_constraintTop_toBottomOf="@+id/txtContraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@drawable/estilos_editex_background"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"/>

    <!-- Botón Actualizar -->
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="Actualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContraseña"
        android:background="@drawable/estilos_editex_background"
        android:textColor="@color/text_color" />
    <Button
        android:id="@+id/btnEliminarAlumno"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Eliminar Alumno"
    android:layout_marginTop="16dp"
    android:padding="8dp"
    app:layout_constraintTop_toBottomOf="@+id/btnActualizar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/estilos_editex_background"
    android:textColor="@color/text_color" />


    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:padding="8dp"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContraseña"
        android:background="@drawable/estilos_editex_background"
        android:textColor="@color/text_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
